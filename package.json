{
  "name": "notion2wechat",
  "version": "1.0.0",
  "description": "Chrome extension to convert Notion articles to WeChat Official Account format",
  "type": "module",
  "homepage": "https://github.com/nmvr2600/notion2wechat",
  "bugs": {
    "url": "https://github.com/nmvr2600/notion2wechat/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nmvr2600/notion2wechat.git"
  },
  "scripts": {
    "dev": "vite build --mode development --watch",
    "build": "tsc && vite build",
    "build:crx": "pnpm run build && pnpm exec crx pack dist -o notion2wechat.crx",
    "build:zip": "pnpm run build && cd dist && zip -r ../notion2wechat-v$(node -p \"require('./package.json').version\").zip .",
    "build:load": "pnpm run build && echo '请在浏览器开发者模式中加载 dist 文件夹'",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "icons": "node scripts/gen-icons.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.8.0",
    "crx": "^5.0.1",
    "sharp": "^0.33.5",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "juice": "^11.0.3",
    "marked": "^9.1.2",
    "marked-highlight": "^2.2.2"
  }
}
