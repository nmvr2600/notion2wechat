{
  "name": "notion2wechat",
  "version": "1.0.0",
  "description": "Chrome extension to convert Notion articles to WeChat Official Account format",
  "type": "module",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "icons": "node scripts/gen-icons.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.8.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "sharp": "^0.33.5"
  },
  "dependencies": {
    "marked": "^9.1.2"
  }
}