{
  "manifest_version": 3,
  "name": "Notion2WeChat",
  "version": "1.0.0",
  "description": "Convert Notion articles to WeChat Official Account format",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.notion.so/*"],
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blue.css", "red.css"],
      "matches": ["https://www.notion.so/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Notion2WeChat"
  }
}
