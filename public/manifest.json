{
  "manifest_version": 3,
  "name": "Notion2WeChat",
  "version": "1.0.0",
  "description": "Convert Notion articles to WeChat Official Account format",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.notion.so/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.css",
        "*.js",
        "*.wasm",
        "assets/*",
        "assets/**/*"
      ],
      "matches": [
        "https://www.notion.so/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Notion2WeChat"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}